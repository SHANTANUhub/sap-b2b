<mvc:View controllerName="projecttrigger.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form">
    <Page id="page" title="{i18n>title}">
        <content>
            <IconTabBar id="idIconTabBar" class="sapUiResponsiveContentPadding">
                <items>
                    <!-- Products Tab -->
                    <IconTabFilter id="productsTab" text="Products" icon="sap-icon://product"
                        count="{/Products/$count}">
                        <Table id="productsTable" items="{/Products}" growing="true"
                            growingThreshold="10">
                            <headerToolbar>
                                <OverflowToolbar id="productsToolbar">
                                    <Title id="productsTitle" text="Products (b2bpro1)" level="H2" />
                                </OverflowToolbar>
                            </headerToolbar>
                            <columns>
                                <Column id="colProductName">
                                    <header>
                                        <Text id="txtProductName" text="Product Name" />
                                    </header>
                                </Column>
                                <Column id="colPrice">
                                    <header>
                                        <Text id="txtPrice" text="Price" />
                                    </header>
                                </Column>
                                <Column id="colStock">
                                    <header>
                                        <Text id="txtStock" text="Stock" />
                                    </header>
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem id="productsItem">
                                    <cells>
                                        <Text id="cellProductName" text="{Name}" />
                                        <ObjectNumber id="cellPrice" number="{Price}" />
                                        <Text id="cellStock" text="{Stock}" />
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </IconTabFilter>

                    <!-- Trigger Workflow Tab -->
                    <IconTabFilter id="workflowTab" text="Trigger Workflow" icon="sap-icon://process">
                        <VBox id="workflowBox" class="sapUiMediumMargin">
                            <f:SimpleForm id="workflowForm" editable="true" layout="ResponsiveGridLayout"
                                labelSpanXL="4" labelSpanL="3" labelSpanM="4" labelSpanS="12"
                                emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0"
                                columnsXL="2" columnsL="1" columnsM="1"
                                singleContainerFullSize="false">
                                <f:content>
                                    <Label id="lblOrderNumber" text="Order Number" required="true" />
                                    <Input id="orderNumberInput" placeholder="e.g. ORD-2024-001" 
                                        required="true" />

                                    <Label id="lblCustomerName" text="Customer Name" />
                                    <Input id="customerNameInput" placeholder="e.g. John Doe" />

                                    <Label id="lblOrderAmount" text="Order Amount" />
                                    <Input id="orderAmountInput" placeholder="e.g. 1500.00" 
                                        type="Number" />

                                    <Label id="lblOrderDate" text="Order Date" />
                                    <DatePicker id="orderDatePicker" 
                                        displayFormat="yyyy-MM-dd"
                                        valueFormat="yyyy-MM-dd" />

                                    <Label id="lblExpectedDelivery" text="Expected Delivery Date" />
                                    <DatePicker id="expectedDeliveryPicker" 
                                        displayFormat="yyyy-MM-dd"
                                        valueFormat="yyyy-MM-dd" />

                                    <Label id="lblShippingCountry" text="Shipping Country" />
                                    <Input id="shippingCountryInput" placeholder="e.g. USA" />
                                </f:content>
                            </f:SimpleForm>

                            <HBox id="workflowButtonBox" class="sapUiSmallMarginTop" justifyContent="Center">
                                <Button id="btnTriggerWorkflow" text="Trigger Workflow" type="Emphasized"
                                    icon="sap-icon://initiative" press=".onTriggerWorkflow" />
                                <Button id="btnClearForm" text="Clear" icon="sap-icon://clear-all"
                                    press=".onClearForm" class="sapUiSmallMarginBegin" />
                            </HBox>

                            <MessageStrip id="workflowResultStrip" 
                                text="" 
                                showIcon="true"
                                visible="false"
                                class="sapUiMediumMarginTop" />
                        </VBox>
                    </IconTabFilter>
                </items>
            </IconTabBar>
        </content>
    </Page>
</mvc:View>